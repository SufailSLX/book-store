<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Manage Books</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <nav class="navbar">
        <h2>Admin Panel</h2>
        <a href="/login" class="logout">Logout</a>
    </nav>

    <div class="container">
        <h2>Add a New Book</h2>
        <form action="/api/auth/books/add" method="POST" enctype="multipart/form-data">
            <input type="text" name="title" placeholder="Book Title" required>
            <input type="text" name="author" placeholder="Author" required>
            <textarea name="description" placeholder="Short Description"></textarea>
            <textarea name="content" placeholder="Book Content" required></textarea>
            <input type="file" name="image" accept="image/*"> <!-- âœ… File input for image -->
            <button type="submit">Add Book</button>
        </form>

        <h3>Available Books</h3>
        <ul>
            <% books.forEach(book => { %>
                <li>
                    <strong><%= book.title %></strong> by <%= book.author %>
                    <% if (book.image) { %>
                        <img src="<%= book.image %>" alt="Book Cover" width="100">
                    <% } %>
                    <form action="/api/auth/books/delete/<%= book._id %>" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
